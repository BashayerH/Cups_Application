<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF4ED"
    tools:context=".Coffee.CoffeeDetails">

    <Button
        android:id="@+id/addCartT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#350F0F"
        android:text="add to cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="425dp"
            android:layout_height="152dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                tools:text="textView3" />

            <TextView
                android:id="@+id/textTD"
                android:layout_width="207dp"
                android:layout_height="45dp"
                android:layout_marginTop="68dp"
                android:fontFamily="@font/tapestry_regular"
                android:padding="10dp"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textColor="#096860"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageTD"
                android:layout_width="157dp"
                android:layout_height="216dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundImg"
                app:srcCompat="@drawable/tea1">


            </com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:id="@+id/multiLineTD"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="84dp"
                android:ems="10"
                android:fontFamily="@font/tapestry_regular"
                android:gravity="bottom"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:textAlignment="viewStart"
                android:textColor="#420602"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/cupPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="price"
                android:textAlignment="center"
                android:textColor="#096860"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>